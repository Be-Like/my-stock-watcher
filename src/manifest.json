{
  "manifest_version": 2,
  "name": "My Stock Watcher",
  "homepage_url": "http://localhost:8080/",
  "description": "A readily accessible and clean way of watching the stocks you care about.",
  "default_locale": "en",
  "permissions": [],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "My Stock Watcher",
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    }
  }
}
